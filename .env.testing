# 测试环境配置
# 此文件用于 pytest 测试，不包含真实的敏感信息

# 应用配置
KIKI_ENV=testing
KIKI_DEBUG=true
KIKI_API_HOST=127.0.0.1
KIKI_API_PORT=8000
KIKI_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8000

# LLM 配置 - 测试环境使用 Mock
KIKI_LLM_PROVIDER=mock
KIKI_LLM_MODEL=test-model
KIKI_LLM_TEMPERATURE=0
KIKI_LLM_MAX_TOKENS=100
KIKI_LLM_MAX_RETRIES=2

# LangSmith - 测试时禁用追踪
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=kiki-agent-test

# Redis - 测试环境使用 mockredis 或真实 Redis 的测试数据库
KIKI_REDIS_URL=redis://localhost:16379/15

# PostgreSQL - 测试数据库
KIKI_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kiki_test
KIKI_DATABASE_POOL_SIZE=5
KIKI_DATABASE_MAX_OVERFLOW=10

# JWT 配置
KIKI_JWT_SECRET=test-secret-key-for-jwt-token-minimum-32-chars
KIKI_JWT_ALGORITHM=HS256
KIKI_JWT_EXPIRATION_MINUTES=30

# 限流配置 - 测试环境放宽限制
KIKI_RATE_LIMIT_ENABLED=true
KIKI_RATE_LIMIT_PER_MINUTE=1000

# 日志配置
KIKI_LOG_LEVEL=INFO
KIKI_LOG_FORMAT=json

# 评估配置
KIKI_LANGFUSE_PUBLIC_KEY=
KIKI_LANGFUSE_SECRET_KEY=
KIKI_LANGFUSE_HOST=

# Dashscope (阿里云)
KIKI_DASHSCOPE_API_KEY=
